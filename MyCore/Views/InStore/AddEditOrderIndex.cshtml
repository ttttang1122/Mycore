
@{
    ViewData["Title"] = "AddEditOrderIndex";
    Layout = "~/Views/Share/_LayoutBody.cshtml";
}

<style>
    #bottomField {
        position: fixed;
        top: 0;
        right: 25px;
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 0px 0px 6px 6px;
        padding: 10px;
    }

        #bottomField .btn-group {
            font-size: 14px;
            margin-top: -1px;
            vertical-align: middle;
            color: #666666;
        }

    .layui-form-label {
        width: 80px;
